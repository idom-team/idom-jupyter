   "source": [
    "import idom\n",
    "import idom_jupyter\n",
    "\n",
    "\n",
    "@idom.element\n",
    "def ClickCount():\n",
    "    count, set_count = idom.hooks.use_state(0)\n",
    "\n",
    "    return idom.html.button(\n",
    "        {\"onClick\": lambda event: set_count(count + 1)},\n",
    "        [f\"Click count: {count}\"],\n",
    "    )\n",
    "\n",
    "\n",
    "idom_jupyter.Layout(ClickCount)"
   ]
