{
  "name": "idom-client-jupyter",
  "version": "0.3.0",
  "description": "A client for IDOM implemented using Jupyter widgets",
  "author": "Ryan Morshead",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/idom-team/idom-jupyter.git"
  },
  "keywords": [
    "jupyter",
    "widgets",
    "ipython",
    "ipywidgets",
    "jupyterlab-extension"
  ],
  "files": [
    "lib/**/*.js",
    "dist/*.js"
  ],
  "scripts": {
    "clean": "rimraf dist/ && rimraf ../idom_jupyter/labextension/ && rimraf ../idom_jupyter/nbextension",
    "prepublish": "npm run clean && npm run build",
    "build": "webpack && npm run build:labextension",
    "build:labextension": "jupyter labextension build .",
    "watch": "webpack --watch --mode=development",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@jupyterlab/builder": "^3.0.0-rc.4",
    "webpack": "^4.41.5",
    "rimraf": "^2.6.1"
  },
  "dependencies": {
    "@jupyter-widgets/base": "^1.1 || ^2 || ^3 || ^4.0.0-beta.1",
    "idom-client-react": "^0.5.4",
    "lodash": "^4.17.4"
  },
  "jupyterlab": {
    "extension": "lib/labplugin",
    "outputDir": "../idom_jupyter/labextension",
    "sharedPackages": {
      "@jupyter-widgets/base": {
        "bundled": false,
        "singleton": true
      }
    }
  }
}
